#include <stdio.h>
#include <cstdlib>

int main ()
{
	int opcao;

	system("cls");
	menuprincipal:
	printf ("Selecione a opcao desejada:\n\n1-Habilitar proxy do Mackenzie\n");
	printf ("2-Desabilitar proxy do Mackenzie\n3-SAIR\n\nOpcao:");
	scanf ("%d", &opcao);

	switch (opcao)
	{
		case 1:
		{
			system ("habilita.bat");
			break;
		}
		case 2:
		{
			system ("desabilita.bat");
		}
		case 3:
		{
			return 0;
		}
		default:
		{
			printf ("Opcao invalida! Tente novamente.\n");
			system ("PAUSE");
			system ("cls");
			goto menuprincipal;
		}
	}
}


